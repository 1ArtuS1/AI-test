import random

def main():
    print("Добро пожаловать в игру 'Белый Альбом'!")
    print("Вы - Меллиса, и вам предстоит исследовать разные слои этой загадочной вселенной.")
    print("Выберите, в какой слой отправиться: Руины (1), Талассофобия (2), или Ядро (3)?")
    
    choice = input("> ")
    
    if choice == "1":
        ruins()
    elif choice == "2":
        thalassophobia()
    elif choice == "3":
        core()
    else:
        print("Пожалуйста, выберите допустимый вариант.")
        main()

def ruins():
